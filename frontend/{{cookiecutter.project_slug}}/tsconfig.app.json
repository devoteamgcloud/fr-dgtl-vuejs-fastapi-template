{
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "typeRoots": ["./node_modules/@types", "./node_modules/vuetify/types"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "composite": true,
    "noEmit": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vuetify", "vite/client"],
    "target": "ESNext",
    "lib": ["DOM", "ES5", "es2018.promise", "es2016", "es2015", "ES2021.String", "es2022"]
  },
  "references": [
    {
      "path": "./tsconfig.json"
    }
  ]
}
